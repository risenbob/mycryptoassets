<div class="container">
  <div class="columns is-centered">
    <div class="column is-half">
      <div class="box">
        <h1 class="title is-3">Update asset</h1>

        <%= form_for(@crypto_asset) do |f| %>
          <div class="field">
            <%= f.label :crypto_currency_id, class: "label" %>
            <div class="select">
              <%= f.select :crypto_currency_id, CryptoCurrency.all.collect { |c| [c.name, c.id] }, class: "input" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :quantity, class: "label" %>
            <div class="control">
              <%= f.text_field :quantity, class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.submit "Submit", class: "button is-primary is-fullwidth" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="columns is-centered">
    <div class="column is-half">
      <%= link_to 'Back', root_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
